<div id="container" class="w-4/5 mx-auto">
   <h1 class="font-bold text-4xl"><%= t('dashboard.title') %></h1>
   <% presenter = DashboardPresenter.new %>
    <div class="flex flex-col sm:flex-row justify-center">
      <div class="sm:w-1/2 p-2">
        <div class="bg-white px-6 py-8 rounded-lg shadow-lg text-center">
          <h2 class="text-xl font-medium text-gray-700 mb-3"><%= t('dashboard.total_bank_count') %></h2>
          <span class="text-4xl bg-blue-100 text-blue-800 font-bold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3">
            <%= presenter.banks_count %>
          </span>
        </div>
      </div>

      <div class="sm:w-1/2 p-2">
        <div class="bg-white px-6 py-8 rounded-lg shadow-lg text-center">
          <h2 class="text-xl font-medium text-gray-700 mb-3"><%= t('dashboard.total_provider_count') %></h2>
          <span class="text-4xl bg-blue-100 text-blue-800 font-bold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3">
            <%= presenter.providers_count %>
          </span>
        </div>
      </div>
    </div>
  </div>