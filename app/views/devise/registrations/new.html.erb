<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900"><%= t('.sign_up') %></h2>
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= form.label :email %>
        <div class="mt-1">
          <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <div class="mt-1">
          <%= form.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <div class="mt-1">
          <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit t('.sign_up'), class: "btn-primary w-full" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
