<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900"><%= t('.forgot_your_password') %></h2>
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "space-y-6" }) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= form.label :email %>
        <div class="mt-1">
          <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit t('.send_me_reset_password_instructions'), class: "btn-primary w-full text-sm" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
