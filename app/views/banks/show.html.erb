<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @bank %>

    <%= link_to t('bank.edit'), edit_bank_path(@bank), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to t('bank.destroy'), bank_path(@bank), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium", data: { turbo_confirm: t('confirm_destroy') } %>
    </div>
    <%= link_to t('back'), banks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
